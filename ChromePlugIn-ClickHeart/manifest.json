{
  "name": "爱心",
  "description": "ShenBao",
  "version": "1.0",
  "manifest_version": 2,
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
  "content_scripts": [
    {
      "matches": ["*://*/*", "https://*/*","file:///*/*"],            //指定此域名下可以使用
      "js": ["jquery.min.js","xx.js"]
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*","file:///*/*"
  ]
}